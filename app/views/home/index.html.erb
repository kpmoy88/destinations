<div class="span9">
	<section class="well">
		<h2>Recent Submissions</h2>
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Photo</th>
					<th>City</th>
					<th>State</th>
					<th>Posted by</th>
					<th>Posted on</th>
				</tr>
			</thead>
			<tbody>
				<% @locations.each do |location| %>
					<tr>
						<td><%= link_to location.title, location %></td>
						<td><%= image_tag(location.image.url(:thumb)) %></td>
						<td><%= link_to location.city, locations_path(:search =>location.state,:search_by => 'city') %></td>
						<td><%= link_to location.state, locations_path(:search =>location.state,:search_by => 'state') %></td>
						<td><%= link_to User.find(location.user_id).username, profile_path(location.user_id) %></td>
						<td><%= location.date_posted %></td>
					</tr>
				<% end %>
			<tbody>
		</table>
	</section>

	<section class="well">
		<h2>Recent Gallery Submissions</h2>
		<% unless @photos.empty? %>
          
            <% @photos.each do |image| %>
              <%= link_to image_tag(image.photo.url(:thumb)),location_gallery_path(@location,image) %>
            <% end %>
          
        <% else %>
            <strong>No Images Available<strong>
        <% end %>
	</section>
<div>