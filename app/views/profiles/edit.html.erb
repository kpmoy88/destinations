<%= stylesheet_link_tag "profile" %>
<div id="profileEdit">
  <section class="well">
      <h2>Edit Profile</h2>

      <%= form_for @profile, :html => { :multipart => true } do |f| %>
        <fieldset>
          <div class="fields">
            <%= f.label :first_name %>
            <%= f.text_field :first_name %>
          </div>
          <div class="fields">
            <%= f.label :last_name %>
            <%= f.text_field :last_name %>
          </div>
          <div class="fields">
            <%= f.label :city %>
            <%= f.text_field :city %>
          </div>
          <div class="fields">
            <%= f.label :state %>
            <%= f.text_field :state %>
          </div>
          <div class="fields">
            <%= f.label :bio %>
            <%= f.text_area :bio %>
          </div>
          <div class="fields">
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
          </div>
          </br>
          <%= f.submit %>
        </fieldset>
      <% end %>
      
  </section>
</div>