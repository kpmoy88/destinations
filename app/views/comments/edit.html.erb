<%= stylesheet_link_tag "comment" %>
<div id="commentEdit">
  <section class="well">
      <h4>Edit Comment on <%=@location.title %></h4>
      <%= form_for [@location,@comment] do |f| %>
        <fieldset>
          <div class="fields">
            <%= f.label :comment %>
            <%= f.text_area :comment %>
            </br>
            <%= f.submit "Update" %>
          </div>
        </fieldset>
      <% end %>
      
  </section>
</div>